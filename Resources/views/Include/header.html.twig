<!DOCTYPE html>
<html lang="{{ pagevars.lang }}" xml:lang="{{ pagevars.lang }}">

    <head>
      <title>{{ pagevars.title }}</title>
      <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
      <meta name="description" content="{{ pagevars.meta.description }}" />
      <meta name="keywords" content="{{ pagevars.meta.keywords }}" />
      <meta name="viewport" content="width=device-width, initial-scale=1.0" />
      {{ pageAddAsset('stylesheet', zasset('@ZikulaSpecTheme:css/style.css')) }}
      {% block stylesheets '' %}
    </head>
    <body>

    <div class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="{{ app.request.baseUrl }}">{{ getModVar('ZConfig', 'sitename') }}</a>
        </div>
        <div class="navbar-collapse collapse">
        {% if pagetype == 'admin' %}
          <ul class="nav navbar-nav">
            <li><a href="{{ app.request.baseUrl }}">{{ __('Home') }}</a></li>
            {#{checkpermission component='ZikulaSettingsModule::' instance='::' level='ACCESS_ADMIN' assign='okAccess'}#}
            {#{if $okAccess}#}
            <li><a href="{{ path('zikulasettingsmodule_admin_index') }}">{{ __("Settings") }}</a></li>
            {#{/if}#}
            {#{checkpermission component='ZikulaExtensionsModule::' instance='::' level='ACCESS_ADMIN' assign='okAccess'}#}
            {#{if $okAccess}#}
            <li><a href="{{ path('zikulaextensionsmodule_admin_index') }}">{{ __("Extensions") }}</a></li>
            {#{/if}#}
            {#{checkpermission component='ZikulaBlocksModule::' instance='::' level='ACCESS_EDIT' assign='okAccess'}#}
            {#{if $okAccess}#}
            <li><a href="{{ path('zikulablocksmodule_admin_index') }}">{{ __("Blocks") }}</a></li>
            {#{/if}#}
            {#{checkpermission component='ZikulaUsersModule::' instance='::' level='ACCESS_MODERATE' assign='okAccess'}#}
            {#{if $okAccess}#}
            <li><a href="{{ path('zikulausersmodule_admin_index') }}">{{ __("Users") }}</a></li>
            {#{/if}#}
            {#{checkpermission component='ZikulaGroupsModule::' instance='::' level='ACCESS_EDIT' assign='okAccess'}#}
            {#{if $okAccess}#}
            <li><a href="{{ path('zikulagroupsmodule_admin_index') }}">{{ __("Groups") }}</a></li>
            {#{/if}#}
            {#{checkpermission component='ZikulaPermissionsModule::' instance='::' level='ACCESS_ADMIN' assign='okAccess'}#}
            {#{if $okAccess}#}
            <li><a href="{{ path('zikulapermissionsmodule_admin_index') }}">{{ __("Permission rules") }}</a></li>
            {#{/if}#}
            {#{checkpermission component='ZikulaThemeModule::' instance='::' level='ACCESS_EDIT' assign='okAccess'}#}
            {#{if $okAccess}#}
            <li><a href="{{ path('zikulathememodule_admin_index') }}">{{ __("Themes") }}</a></li>
            {#{/if}#}
          </ul>
        {% else %}
          <ul class="nav navbar-nav">
            <li class="active"><a href="/" title="{{ __("Go to the site's home page") }}">{{ __('Home') }}</a></li>
            <li><a href="{{ path('zikulausersmodule_user_index') }}" title="{{ __('Go to your account panel') }}">{{ __("My Account") }}</a></li>
            {#<li><a href="{{ path('zikulasearchmodule_user_index') }}" title="{{ __('Search this site') }}">{{ __("Site search") }}</a></li>#}
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">Dropdown <b class="caret"></b></a>
              <ul class="dropdown-menu">
                <li><a href="#">Action</a></li>
                <li><a href="#">Another action</a></li>
                <li><a href="#">Something else here</a></li>
                <li class="divider"></li>
                <li class="dropdown-header">Nav header</li>
                <li><a href="#">Separated link</a></li>
                <li><a href="#">One more separated link</a></li>
              </ul>
            </li>
          </ul>
          <form class="navbar-form navbar-right">
            <div class="form-group">
              <input type="text" placeholder="Email" class="form-control">
            </div>
            <div class="form-group">
              <input type="password" placeholder="Password" class="form-control">
            </div>
            <button type="submit" class="btn btn-success">Sign in</button>
          </form>
        {% endif %}
        </div><!--/.navbar-collapse -->
      </div>
    </div>